<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>pillboxServlet</servlet-name>
        <servlet-class>Servlets.pillboxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pillboxServlet</servlet-name>
        <url-pattern>/pillboxServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>drugServlet</servlet-name>
        <servlet-class>Servlets.drugServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drugServlet</servlet-name>
        <url-pattern>/drugServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>medicineFormServlet</servlet-name>
        <servlet-class>Servlets.medicineFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>medicineFormServlet</servlet-name>
        <url-pattern>/medicineFormServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>contentServlet</servlet-name>
        <servlet-class>Servlets.contentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contentServlet</servlet-name>
        <url-pattern>/contentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>drugCatalogueServlet</servlet-name>
        <servlet-class>Servlets.drugCatalogueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drugCatalogueServlet</servlet-name>
        <url-pattern>/drugCatalogueServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>preorderFormServlet</servlet-name>
        <servlet-class>Servlets.preorderFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>preorderFormServlet</servlet-name>
        <url-pattern>/preorderFormServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>preorderServlet</servlet-name>
        <servlet-class>Servlets.preorderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>preorderServlet</servlet-name>
        <url-pattern>/preorderServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>patientServlet</servlet-name>
        <servlet-class>Servlets.patientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>patientServlet</servlet-name>
        <url-pattern>/patient/getMedicationNames</url-pattern>
        <url-pattern>/patient/listPillbox</url-pattern>
        <url-pattern>/patient/addToPillbox</url-pattern>
        <url-pattern>/patient/addMedication</url-pattern>
        <url-pattern>/patient/editMedication</url-pattern>
        <url-pattern>/patient/deleteMedication</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>Servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GeneralSettingsServlet</servlet-name>
        <servlet-class>Servlets.GeneralSettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GeneralSettingsServlet</servlet-name>
        <url-pattern>/GeneralSettingsServlet</url-pattern>
    </servlet-mapping>

</web-app>

